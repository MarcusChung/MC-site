---
// BlogImage.astro
export interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="blog-image">
  <img src={src} alt={alt} loading="lazy" />
  {caption && <figcaption>{caption}</figcaption>}

  <style>
    .blog-image {
      text-align: center;
      margin: 1.5rem 0;
    }
    img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
    }
    figcaption {
      margin-top: 0.5rem;
      font-size: 0.9rem;
      color: #666;
    }
  </style>
</figure>
